# ============================================
# 2Bot Platform - Production Environment
# ============================================
# Copy this to .env.production and fill in values

# ============================================
# Application URLs
# ============================================
NEXT_PUBLIC_APP_URL=https://2bot.org
NEXT_PUBLIC_API_URL=https://2bot.org/api
NODE_ENV=production

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_USER=2bot_prod
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD>
POSTGRES_DB=2bot_production
DATABASE_URL=postgresql://2bot_prod:<PASSWORD>@postgres:5432/2bot_production

# ============================================
# Redis Cache
# ============================================
REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD>
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ============================================
# Authentication (JWT)
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=<GENERATE_64_BYTE_SECRET>
JWT_REFRESH_SECRET=<GENERATE_64_BYTE_SECRET>

# ============================================
# Encryption
# ============================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=<GENERATE_32_BYTE_HEX>

# ============================================
# Stripe Billing (LIVE MODE)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...

# Webhook secret from Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs from Stripe Products
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_BUSINESS=price_...

# ============================================
# Email (Resend)
# ============================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=2Bot <noreply@2bot.org>
EMAIL_REPLY_TO=support@2bot.org

# ============================================
# Sentry Error Tracking
# ============================================
# Get from: https://sentry.io/settings/
SENTRY_DSN=https://...@....ingest.sentry.io/...
SENTRY_AUTH_TOKEN=sntrys_...
SENTRY_ORG=2bot
SENTRY_PROJECT=2bot-platform

# ============================================
# Telegram (for gateway testing)
# ============================================
# Optional: for platform monitoring bot
TELEGRAM_BOT_TOKEN=<YOUR_BOT_TOKEN>

# ============================================
# Admin Settings
# ============================================
# First admin email (auto-promoted on registration)
ADMIN_EMAIL=admin@2bot.org
